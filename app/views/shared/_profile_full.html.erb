<div class="profile-details p-4 bg-base-100 rounded-lg shadow-md">
  <div class="user-info text-center">
    <h2 class="text-xl font-bold text-gray-800"><%= user.name %></h2>
    <p class="text-gray-600"><%= user.email %></p>
  </div>
  <% if profile.strength.present? %>
    <p class="text-lg text-gray-700 mb-2">
      <strong class="font-bold">あなたの強み:</strong> <%= profile.strength %>
    </p>
  <% end %>

  <% if profile.interest.present? %>
    <p class="text-lg text-gray-700 mb-2">
      <strong class="font-bold">やってみたいこと:</strong> <%= profile.interest %>
    </p>
  <% end %>

  <% if profile.hobby.present? %>
    <p class="text-lg text-gray-700 mb-2">
      <strong class="font-bold">趣味:</strong> <%= profile.hobby %>
    </p>
  <% end %>
</div>
